<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_update_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/update_dialog_top_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="28sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新版本上线啦"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/update_dialog_center_ll"
        android:paddingTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20sp"
            android:textColor="#333333"
            android:gravity="center"
            android:id="@+id/update_dialog_app_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发现新版本"/>
        <TextView
            android:textSize="20sp"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="邀请您体验尝鲜!"/>
        <TextView
            android:textSize="18sp"
            android:textColor="#afafaf"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="「当前数据已保存, 可立即升级」"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/update_dialog_bottom_ll"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <View
            android:background="#eaeaea"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <Button
            android:textSize="24sp"
            android:textColor="@color/text_color_blue"
            android:id="@+id/update_dialog_exit_btn"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="退出并更新"/>
    </LinearLayout>
</LinearLayout>
