<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/loading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/dp_460">
    <TextView
        android:background="@drawable/shape_white_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_12"/>
    <TextView
        android:textSize="@dimen/sp_26"
        android:textColor="#666666"
        android:gravity="center"
        android:id="@+id/tv_title"
        android:background="@drawable/bg_stroke_bottom_white"
        android:paddingBottom="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:text="登陆失效"/>
    <ScrollView
        android:scrollbarSize="4dp"
        android:scrollbarThumbVertical="@drawable/bg_scroll_bar"
        android:scrollbarStyle="insideOverlay"
        android:id="@+id/layout_scroll"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/layout_container"
            android:background="@drawable/bg_stroke_bottom_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:minHeight="@dimen/dp_100">
                <TextView
                    android:textSize="@dimen/sp_22"
                    android:textColor="#989898"
                    android:id="@+id/tv_content"
                    android:paddingLeft="@dimen/dp_22"
                    android:paddingTop="@dimen/dp_22"
                    android:paddingRight="@dimen/dp_22"
                    android:paddingBottom="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/dp_460"
                    android:text="您的登录信息已失效，请重新登录"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_22"
                    android:paddingRight="@dimen/dp_22"
                    android:paddingBottom="@dimen/dp_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textColor="#cccccc"
                        android:id="@+id/tv_error_msg"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="@dimen/dp_460"/>
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textColor="#51a6ff"
                        android:id="@+id/tv_report"
                        android:background="@drawable/selector_text"
                        android:padding="@dimen/dp_6"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上报"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/shape_gray_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64">
        <TextView
            android:textSize="@dimen/sp_26"
            android:textColor="#b3b3b3"
            android:gravity="center"
            android:id="@+id/btnNegative"
            android:background="@drawable/sel_def_gray_left"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="取消"
            android:layout_weight="1"/>
        <View
            android:id="@+id/divider"
            android:background="#e1e1e1"
            android:layout_width="1px"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="@dimen/sp_26"
            android:textColor="@color/color_xhview_positive"
            android:gravity="center"
            android:id="@+id/btnPositive"
            android:background="@drawable/sel_def_gray_right"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="确认"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
