<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/developerToolbar"
        app:navigationIcon="@mipmap/back_arrows_grey"
        style="@style/Toolbar">
        <TextView
            android:textSize="@dimen/head_center_title_size"
            android:textColor="@color/black_dark"
            android:layout_gravity="center"
            android:id="@+id/developerToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/developerRecyclerView"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/developerToolbar"/>
    <View
        android:background="@color/split_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_split_height"
        android:layout_below="@+id/developerToolbar"/>
</RelativeLayout>
