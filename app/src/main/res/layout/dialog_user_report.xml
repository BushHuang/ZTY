<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/loading"
        android:background="@drawable/shape_circle_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dp_480">
        <TextView
            android:background="@drawable/shape_white_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_12"/>
        <TextView
            android:textSize="@dimen/dp_26"
            android:textColor="#333333"
            android:gravity="center"
            android:id="@+id/tv_title"
            android:background="@drawable/bg_stroke_bottom_white"
            android:paddingBottom="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:text="问题描述"/>
        <LinearLayout
            android:id="@+id/layout_scroll"
            android:background="@drawable/bg_stroke_bottom_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_container"
                android:background="@drawable/shape_circle_edit_text_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:minHeight="@dimen/dp_100">
                <EditText
                    android:textColor="#666666"
                    android:textColorHint="#c6c6c6"
                    android:gravity="top"
                    android:id="@+id/etErrorMessage"
                    android:background="@null"
                    android:padding="@dimen/dp_10"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_200"
                    android:hint="请描述你的问题"
                    android:maxLength="240"
                    android:inputType="textMultiLine"
                    android:textCursorDrawable="@null"/>
                <TextView
                    android:textColor="#999999"
                    android:layout_gravity="right"
                    android:id="@+id/tvTextLengthHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/shape_gray_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/dp_26"
                android:textColor="#999999"
                android:gravity="center"
                android:id="@+id/tvCancel"
                android:background="@drawable/sel_def_gray_left"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dp_64"
                android:text="取消"
                android:layout_weight="1"/>
            <View
                android:id="@+id/divider"
                android:background="#e1e1e1"
                android:layout_width="1px"
                android:layout_height="match_parent"/>
            <TextView
                android:textSize="@dimen/dp_26"
                android:textColor="#0b618c"
                android:gravity="center"
                android:id="@+id/tvUpload"
                android:background="@drawable/sel_def_gray_right"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dp_64"
                android:text="确认"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
